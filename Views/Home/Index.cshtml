@model IEnumerable<LMS.Models.Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Books Aviable In Library</h1>
    
</div>


<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-4">
            <div class="card bg-dark text-white">
                <img src="https://img.freepik.com/free-photo/book-composition-with-open-book_23-2147690555.jpg" class="card-img-top" alt="Book Cover">
                <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text">
                            Author: @Html.DisplayFor(modelItem => item.Author)
                    </p>
                    <p class="card-text">
                            @Html.DisplayFor(modelItem => item.Genere)

                        </p>
                    <p class="card-text">
                            @Html.DisplayFor(modelItem => item.Publication)
                        </p>
                    <p class="card-text">
                            Description :  @Html.DisplayFor(modelItem => item.Description)

                    </p>
                </div>
            </div>
        </div>
        }
       
        </div>
    </div>

